<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2 class="error"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul></div>
<% end %>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="form">
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Update Book' , class: 'button' %>
    </div>
  </div>
<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", '/books' %>

<% end %>